# Flask
FLASK_ENV=production
APP_SECRET_KEY=CHANGE_ME_LONG_RANDOM

# In locale (Docker su 127.0.0.1:8080) NON impostare il canonical host.
# Se lasci example.com, il check ti genererà 400.
CANONICAL_HOST=

# Database (MySQL)
MYSQL_DATABASE=trainingops
MYSQL_USER=trainingops
MYSQL_PASSWORD=CHANGE_ME_PASSWORD
MYSQL_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD

DATABASE_URL=mysql+pymysql://trainingops:CHANGE_ME_PASSWORD@mysql:3306/trainingops?charset=utf8mb4

# Uploads
UPLOAD_ROOT=/app/uploads
MAX_CV_MB=10

# Limiter (consigliato: Redis in produzione; fallback memory)
# REDIS_URL=redis://redis:6379/0

# Host consentiti (localhost + 127.0.0.1). Se accedi anche via IP LAN, aggiungilo qui.
ALLOWED_HOSTS=127.0.0.1,localhost

# Cookie/session security
# In HTTP locale metterli true può creare problemi di sessione (cookie non inviati su HTTP).
# Lasciali false in locale. In produzione dietro HTTPS mettili true.
SESSION_COOKIE_SECURE=false
REMEMBER_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=Lax
REMEMBER_COOKIE_SAMESITE=Lax

# Reverse proxy
TRUST_PROXY_HEADERS=true
